void sendMotionStatus(bool motionDetected)
{

  if (motionDetected)
  {
    Serial.println("Motion detected! Sending alert to server..."); // Send a message indicating motion is detected
    motionDetected = true;
  }
  else {

    Serial.println("Motion not detected."); // Send a message indicating motion is not detected
    motionDetected = false;
  }
}

void activateBuzzer(bool activate) {
  if (activate) {
    // Turn on the buzzer
    digitalWrite(buzzerPin, HIGH);
  } else {
    // Turn off the buzzer
    digitalWrite(buzzerPin, LOW);
  }
}

void activateLED(bool activate) {
  if (activate) {
    // Turn on the buzzer
    digitalWrite(ledPin, HIGH);
  } else {
    // Turn off the buzzer
    digitalWrite(ledPin, LOW);
  }
}


